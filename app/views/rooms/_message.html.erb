<% if message.sent? %>
  <div class="flex justify-end">
    <div class="">
      <div class="grid mb-2">
        <div class="px-3 py-2 bg-indigo-600 rounded-xl">
          <h2 class="text-white text-sm font-normal leading-snug"><%= message.message %></h2>
        </div>
        <div class="justify-start items-center inline-flex">
          <h3 class="text-gray-500 text-xs font-normal leading-4 py-1"><%= message_time(message) %></h3>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if message.receive? %>
  <div class="flex">
    <div class="">
      <div class="grid mb-2">
        <div class="px-3.5 py-2 bg-gray-100 rounded-xl justify-start  items-center gap-3 inline-flex">
          <h2 class="text-gray-900 text-sm font-normal leading-snug"><%= message.message %></h2>
        </div>
        <div class="justify-start items-center inline-flex">
          <h3 class="text-gray-500 text-xs font-normal leading-4 py-1"><%= message_time(message) %></h3>
        </div>
      </div>
    </div>
  </div>
<% end %>
